<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfashionstore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/shirt3_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/shirt3_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme3">
        <activity android:name=".NavigationScreens.ShortsActivity"></activity>
        <activity android:name=".NavigationScreens.TrousersActivity" />
        <activity android:name=".NavigationScreens.ShirtsActivity" />
        <activity
            android:name=".screens.SearchActivity"
            android:theme="@style/AppTheme5" />
        <activity
            android:name=".screens.WelcomeActivity"
            android:theme="@style/AppTheme5" />
        <activity
            android:name=".screens.SignUpActivity"
            android:parentActivityName=".screens.MainActivity" />
        <activity
            android:name=".screens.LoginActivity"
            android:parentActivityName=".screens.MainActivity" />
        <activity
            android:name=".screens.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.Splash_Screen"
            android:theme="@style/AppTheme2">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>