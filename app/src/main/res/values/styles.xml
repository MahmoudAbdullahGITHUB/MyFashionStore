<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/red</item>
        <item name="android:textSize">20sp</item>
        <item name="colorControlNormal">#ffff</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="AppTheme3" parent="Theme.AppCompat.Light.DialogWhenLarge">
    </style>

    <style name="AppTheme4" parent="Theme.AppCompat.DayNight.DarkActionBar">
    </style>

    <style name="AppTheme5" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

<!--    <style name="AppTheme5" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
<!--    </style>-->

    <style name="myIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="boxStrokeColor">@color/aqua</item>
    </style>

    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    </style>


</resources>
